<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<h1>Login</h1>

<%= form_with url: login_path, method: :post do %>
  <p><%= label_tag :email %><br><%= text_field_tag :email %></p>
  <p><%= label_tag :password %><br><%= password_field_tag :password %></p>
  <%= submit_tag "Login" %>
<% end %>
